<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_drawer_selector"
    android:layout_height="@dimen/drawer_item_height">

    <ImageView
        android:id="@+id/img_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_item_icon"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_item_title"
            android:layout_width="wrap_content"
            style="@style/text_drawer"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txt_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_drawer_desc"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>
</RelativeLayout>