<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding"
        style="@style/text_info_window_title"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_title"
        android:drawableLeft="@drawable/ic_time_small"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        style="@style/text_info_window"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_title"
        android:layout_below="@+id/txt_time">

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_distance_small"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            style="@style/text_info_window"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/txt_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_distance"
            android:drawableLeft="@drawable/ic_accuracy_small"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="0dp"
            style="@style/text_info_window"/>
    </RelativeLayout>
</RelativeLayout>