<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/improve_your_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/improve_your_time"
        android:visibility="invisible"
        android:layout_above="@+id/on_your_marks"
        />

    <TextView
        android:id="@+id/on_your_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_your_marks"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/get_set"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/get_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_set"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/go"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/go"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/cancel_run_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cancel_run_button"
        android:visibility="invisible"/>

</RelativeLayout>