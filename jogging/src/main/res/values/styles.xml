<resources>

    <!-- THEMES -->

    <!-- Base application theme. -->
    <style name="Theme.Jogging" parent="@style/Theme.Sherlock.Light">
        <!-- workaround to avoid that the tiled background disappear when the screen scrolls -->
        <!--<item name="android:windowBackground">@drawable/main_background</item>-->
    </style>

    <style name="Theme.Jogging.NoActionBar" parent="@style/Theme.Sherlock.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- ZoomedDialogs are extending DialogFragment, we have to set a theme to set an animation for them -->
    <style name="Theme.Jogging.ZoomedDialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- STYLES -->


</resources>
